@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Discipline" />
    <title>Loading...</title>
    <script type="text/javascript">
        function getCurrentTime(event) {
            document.getElementById('currentTime').value = new Date().getTime();
            document.getElementsByTagName('form')[0].submit();
        }
    </script>
</head>
<body onload="getCurrentTime(event)">
    <div style="display: none;">
        @using (Html.BeginForm("Initial", "Home", FormMethod.Post)) {
            @Html.AntiForgeryToken()
            @Html.Hidden("currentTime");
        }
    </div>
</body>
</html>