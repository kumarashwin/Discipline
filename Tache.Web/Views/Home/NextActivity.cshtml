@model IEnumerable<Activity>

<div id="activities-button-group">
    @foreach (Activity activity in Model) {
        <div class="row no-gutter">
            <div class="col-xs-offset-3 col-xs-5">
                @using (Ajax.BeginForm("Index", new AjaxOptions { UpdateTargetId = "activity-status", OnSuccess = "resetPage" })) {
                    @Html.Hidden("newActivity", activity.Id);
                    @Html.Hidden("clientRequestTime");
                    <button class="btn btn-default btn-block" data-activity-id="@activity.Id" data-activity-name="@activity.Name" data-activity-description="@activity.Description" data-activity-color="@activity.Color" data-activity-hours="@activity.BudgetHours" data-activity-minutes="@activity.BudgetMinutes" type="submit">@activity.Name</button>
                }
            </div>
            <div class="col-xs-1">
                <div class="btn-group btn-group-justified" role="group">
                    <div class="btn-group" role="group">
                        <button class="btn btn-default"><span class="glyphicon glyphicon-cog"> </span></button>
                    </div>
                    <div class="btn-group" role="group">
                        <button class="btn btn-default"><span class="glyphicon glyphicon-trash"> </span></button>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row no-gutter">
        <div class="col-xs-offset-3 col-xs-6">
            <button type="button" class="btn btn-default btn-block" id="new-activity">+</button>
        </div>
    </div>
</div>

