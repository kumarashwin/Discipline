@model Activity

<div id="activity-form-elements">
    <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
            @using (Ajax.BeginForm("Update", null, new AjaxOptions { UpdateTargetId = "next-activity" }, new { @class = "update" })) {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Description" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Color, new { @class = "form-control", placeholder = "Color" })
                    @Html.ValidationMessageFor(m => m.Color, "", new { @class = "text-danger" })
                    <script> $(function() { $('#Color').colorpicker({ color: "#000000", format: "hex" }); }); </script>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.BudgetHours, new { @class = "form-control", placeholder = "Budgeted Hours" })
                    @Html.ValidationMessageFor(m => m.BudgetHours, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.BudgetMinutes, new { @class = "form-control", placeholder = "Budgeted Minutes" })
                    @Html.ValidationMessageFor(m => m.BudgetMinutes, "", new { @class = "text-danger" })
                </div>
                <div class="btn-group btn-group-justified">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-floppy-disk"></span>
                        </button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary" id="activity-form-exit">
                            <span class="glyphicon glyphicon-remove"></span>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>