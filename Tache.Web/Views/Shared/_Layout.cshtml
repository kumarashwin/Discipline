<!DOCTYPE html>
<html lang="en_US">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Tache" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/unobtrusive")
    @Scripts.Render("~/bundles/validate")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/farbtastic")
    @Scripts.Render("~/bundles/activities")
    @Scripts.Render("~/bundles/chart")

</head>
<body onload="resetPage()">
    <nav class="navbar navbar-default" style="border: 0; margin: 0; min-height: 0;" >
        <div class="container-fluid" style="padding: 0;">
            @RenderSection("Nav", false)
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderSection("Body")
    </div>
</body>

</html>